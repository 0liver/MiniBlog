@* Used to render new comments throgh AJAX calls.  *@
@{
    @*Response.ContentType = "text/plain";*@
    string postId = Request.QueryString["postid"];
    string commentId = Request.QueryString["commentid"];
    Post post = Post.Posts.SingleOrDefault(p => p.ID == postId);

    if (post != null)
    {
        Comment comment = post.Comments.SingleOrDefault(c => c.ID == commentId);

        if (comment != null)
        {
            @RenderPage("~/themes/" + Blog.Theme + "/Comment.cshtml", comment)
        }
    }
}