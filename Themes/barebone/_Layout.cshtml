<!doctype html>
<html lang="en-us">
<head prefix="og: http://ogp.me/ns#">
    <title>@Page.Title</title>
    <meta charset="utf-8" />
    <meta name="description" content="@Page.Title" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link type="application/rsd+xml" rel="edituri" title="RSD" href="~/rsd" />
    <link type="application/rss+xml" rel="alternate" title="@Blog.Title" href="~/feed/rss/" />
    <link type="application/atom+xml" rel="alternate" title="@Blog.Title" href="~/feed/atom/" />

    <link href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.min.css" rel="stylesheet">
    <link href="@Blog.FingerPrint("/themes/" + Blog.Theme + "/site.css")" rel="stylesheet" />
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />

    <meta name="application-name" content="@Blog.Title" />
    <meta name="twitter:title" content="@Page.Title" />
    <meta property="og:title" content="@Page.Title" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="@(Request.Url.Scheme +"://" + Request.Url.Authority + Request.RawUrl)" />
</head>
<body itemscope itemtype="http://schema.org/Blog" class="@Page.AdminClass">

    <div class="container">

        <header class="page-header">
            <span itemprop="name"><a href="~/" itemprop="url">@Blog.Title</a></span>
            <br />
            <em>By Mads Kristensen</em>
        </header>

        <div role="main">
            @RenderBody()
        </div>
    </div>

    <footer id="pagefooter" itemscope itemtype="http://schema.org/Person" itemprop="author">
        @if (!User.Identity.IsAuthenticated)
        {
            <span class="login">
                <a href="~/login/?ReturnUrl=@Request.RawUrl">Sign in <i class="icon-lock icon-white"></i></a>
            </span>
        }

        <span>
            Copyright &copy; @DateTime.Now.Year
            <span itemprop="name">
                <a href="http://madskristensen.net" rel="author me" itemprop="url">Mads Kristensen</a>
            </span>
        </span>
    </footer>

    @RenderSection("scripts", required: false)

</body>
</html>
